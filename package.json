{
  "name": "react-tiny-hook-form",
  "version": "1.0.0",
  "description": "A tiny forms library for React Hooks",
  "keywords": [
    "react",
    "form",
    "hook"
  ],
  "license": "MIT",
  "files": [
    "LICENSE",
    "README.md",
    "dist/",
    "index.js",
    "index.node.js"
  ],
  "main": "./index.js",
  "module": "./index.node.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "default": "./index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/vfuenteHub/react-tiny-hook-form.git"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "publish": "rimraf --glob dist && tsc && vite build --mode development; vite build --mode production && clean-publish",
    "clean": "rimraf --glob dist node_modules package-lock.json yarn.lock"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^26.0.1",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@types/node": "^22.2.0",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^8.1.0",
    "@typescript-eslint/parser": "^8.1.0",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "clean-publish": "^5.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.34.4",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.8",
    "prettier": "^3.3.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "rimraf": "^6.0.1",
    "typescript": "^5.2.2",
    "vite": "^5.3.1",
    "vite-plugin-dts": "^4.0.2"
  },
  "peerDependencies": {
    "react": "^16.8.0 || ^17 || ^18 || ^19"
  },
  "peerDependenciesMeta": {
    "@types/react": {
      "optional": true
    }
  },
  "clean-publish": {
    "files": [
      ".github",
      ".eslintrc",
      ".gitignore",
      ".npmrc",
      ".prettierignore",
      ".prettierrc",
      "tsconfig.json",
      "tsconfig.node.json",
      "vite.config.mts"
    ],
    "fields": [
      "scripts",
      "devDependencies"
    ],
    "cleanDocs": true
  }
}
