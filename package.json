{
  "name": "react-tiny-hook-form",
  "version": "1.0.9",
  "type": "module",
  "description": "A tiny forms library for React Hooks",
  "keywords": [
    "react",
    "form",
    "hook"
  ],
  "license": "MIT",
  "files": [
    "LICENSE",
    "README.md",
    "dist/",
    "index.js",
    "index.node.js"
  ],
  "main": "./index.js",
  "module": "./index.node.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "default": "./index.js"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vfuenteHub/react-tiny-hook-form.git"
  },
  "bugs": {
    "url": "https://github.com/vfuenteHub/react-tiny-hook-form/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "prepublishOnly": "rimraf --glob dist package && vite build --mode development; vite build --mode production && clean-publish",
    "postpublish": "rimraf --glob dist package"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.1",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@types/node": "^22.2.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@typescript-eslint/eslint-plugin": "^8.1.0",
    "@typescript-eslint/parser": "^8.1.0",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "clean-publish": "^5.0.0",
    "eslint": "^9.16.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.34.4",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.8",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "typescript": "^5.2.2",
    "vite": "^6.0.3",
    "vite-plugin-dts": "^4.0.2"
  },
  "peerDependencies": {
    "react": "^16.8.0 || ^17 || ^18 || ^19"
  },
  "peerDependenciesMeta": {
    "@types/react": {
      "optional": true
    }
  },
  "publishConfig": {
    "directory": "package"
  },
  "clean-publish": {
    "files": [
      "examples",
      ".github",
      ".eslintrc",
      ".gitignore",
      ".npmrc",
      ".prettierignore",
      ".prettierrc",
      "tsconfig.json",
      "tsconfig.node.json",
      "vite.config.mts"
    ],
    "fields": [
      "type",
      "scripts"
    ],
    "cleanDocs": true,
    "withoutPublish": true,
    "tempDir": "package",
    "packageManager": "npm"
  }
}
